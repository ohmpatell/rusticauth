# RusticAuth Environment Configuration
# Copy this to .env and update values for your environment

# Database Configuration
DATABASE_URL=postgres://rusticauth:your_password@localhost:5432/rusticauth

# Server Configuration  
HOST=0.0.0.0
PORT=8080

# Security Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars-long-change-in-production
SESSION_SECRET=another-super-secret-session-key-also-at-least-32-chars-long

# Logging Level
RUST_LOG=info

# Production Settings (uncomment for production)
# RUST_ENV=production
# HTTPS_ONLY=true

# Database Pool Settings (optional tuning)
# DB_MAX_CONNECTIONS=10
# DB_MIN_CONNECTIONS=1